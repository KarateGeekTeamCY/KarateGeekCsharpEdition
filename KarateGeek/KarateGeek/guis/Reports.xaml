<Window x:Class="KarateGeek.guis.Reports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reports"  Width="500" Height="600">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Label Content="Athlete"
                   Grid.Row="0"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   />
            <TextBox Name="txtAthleteFilter"
                     VerticalAlignment="Center"
                     Grid.Row="0"
                     Grid.Column="2"/>
            <CheckBox Name="chkAthlete" 
                      Grid.Column="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsChecked="True"/>

            <Label Content="Judge"
                   Grid.Row="1"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   />
            <TextBox Name="txtJudgeFilter"
                     VerticalAlignment="Center"
                     Grid.Row="1"
                     Grid.Column="2"/>
            <CheckBox Name="chkJudge" 
                      Grid.Row="1"
                      Grid.Column="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsChecked="True"/>

            <Label Content="Event"
                   Grid.Row="2"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   />
            <TextBox Name="txtEventFilter"
                     VerticalAlignment="Center"
                     Grid.Row="2"
                     Grid.Column="2"/>
            <CheckBox Name="chEvent" 
                      Grid.Row="2"
                      Grid.Column="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsChecked="True"/>
            
            <Label Content="Tournament"
                   Grid.Row="3"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   />
            <TextBox Name="txtTournamentFilter"
                     VerticalAlignment="Center"
                     Grid.Row="3"
                     Grid.Column="2"/>
            <CheckBox Name="chkTournament" 
                      Grid.Row="3"
                      Grid.Column="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsChecked="True"/>

            <Label Content="Club"
                   Grid.Row="4"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   />
            <TextBox Name="txtClubFilter"
                     VerticalAlignment="Center"
                     Grid.Row="4"
                     Grid.Column="2"/>
            <CheckBox Name="chkClub" 
                      Grid.Row="4"
                      Grid.Column="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsChecked="True"/>
            <Label Content="Country"
                   Grid.Row="5"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   />
            <TextBox Name="txtCountryFilter"
                     VerticalAlignment="Center"
                     Grid.Row="5"
                     Grid.Column="2"/>
            <CheckBox Name="chkCountry" 
                      Grid.Row="5"
                      Grid.Column="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsChecked="True"/>

        </Grid>
        
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="btnBack"
                    Content="Back"
                    Grid.Column="1"
                    Margin="5"
                    VerticalAlignment="Center"/>
            <Button Name="btnClear"
                    Content="Clear"
                    Grid.Column="2"
                    Margin="5"
                    VerticalAlignment="Center"/>
            <Button Name="btnGenerateReport"
                    Content="GenerateReport"
                    Grid.Column="3"
                    Margin="5"
                    VerticalAlignment="Center"/>
            
            
            
        </Grid>
        
    </Grid>
</Window>
