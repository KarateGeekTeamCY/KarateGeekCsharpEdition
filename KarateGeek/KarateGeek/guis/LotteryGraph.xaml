<Window x:Class="KarateGeek.guis.LotteryGraph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LotteryGraph" Height="600" Width="500">
    <Grid>

        <ScrollViewer Name="treeView"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto" >

            <Label Name="terminal" 
                       FontFamily="Lucida Console" 
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center" 
                       Grid.ColumnSpan="2" 
                       Margin="5" 
                       BorderThickness="2"
                       MouseWheel="terminal_MouseWheel"
                       ToolTip="Hold down &lt;Ctrl&gt; to zoom with the mouse wheel"
                       />


        </ScrollViewer>
    </Grid>
</Window>
