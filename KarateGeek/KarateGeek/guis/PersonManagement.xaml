<Window x:Class="KarateGeek.guis.PersonManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Person management" 
        Width="500"
        Height="600">
    <Grid Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Name="lblPersonManagementMenuInfo" 
               Content="Info" 
               FontSize="20" 
               VerticalAlignment="Center" 
               HorizontalContentAlignment="Center"
               Width="Auto"/>

        <TabControl Grid.Row="1">



            <TabItem Name="AthleteTap" 
                     Header="Athlete management">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="*"/>
                        
                    </Grid.ColumnDefinitions>

                        <Label Content="First name"
                               Grid.Row="1"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <TextBox Name="AthleteFirstName" 
                               Grid.Row="1"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>
                        <Label Content="Last name"
                               Grid.Row="2"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <TextBox Name="AthleteLastName" 
                               Grid.Row="2"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>
                        <Label Content="Fathers name"
                               Grid.Row="3"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <TextBox Name="AthleteFatherName" 
                               Grid.Row="3"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>

                        <Label Content="Sex"
                               Grid.Row="4"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <Grid Grid.Column="2"
                              Grid.Row="4">
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Content="male" 
                                         Grid.Column="0"
                                         VerticalAlignment="Center"
                                         Margin="5"/>
                            <RadioButton Content="male" 
                                         Grid.Column="1"
                                         VerticalAlignment="Center"
                                         Margin="5"/>
                        </Grid>

                        <Label Content="Phone num."
                               Grid.Row="5"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <TextBox Name="AthleteFirstPhone" 
                               Grid.Row="5"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>

                        <Label Content="Secondary phone num."
                               Grid.Row="6"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <TextBox Name="AthleteSecondPhone" 
                               Grid.Row="6"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>

                        <Label Content="Address"
                               Grid.Row="7"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <Grid Grid.Column="2"
                              Grid.Row="7">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="AthleteStreetName"
                                     Grid.Column="0"/>
                            <Label Content="Num." 
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                            <TextBox Name="AthleteAddressNum" 
                                     Grid.Column="2"/>                      
                        </Grid>

                        <Label Content="City"
                               Grid.Row="8"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <ComboBox Name="cmbCityChooses"
                                  Grid.Row="8"
                                  Grid.Column="2"
                                  Margin="0,3,0,3">
                            <ComboBoxItem Content="Nicosia"
                                          IsSelected="True"/>
                        </ComboBox>

                        <Label Content="Country"
                               Grid.Row="9"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <ComboBox Name="cmbCountryChooses"
                                  Grid.Row="9"
                                  Grid.Column="2"
                                  Margin="0,3,0,3">
                            <ComboBoxItem Content="Cyprus"
                                          IsSelected="True"/>
                        </ComboBox>

                        <Label Content="Rank"
                               Grid.Row="10"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <ComboBox Name="cmbRankChooses"
                                  Grid.Row="10"
                                  Grid.Column="2"
                                  Margin="0,3,0,3">
                            <ComboBoxItem Content="White"
                                          IsSelected="True"/>
                        </ComboBox>

                        <Label Content="Rank"
                               Grid.Row="11"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>
                        <ComboBox Name="cmbClubChooses"
                                  Grid.Row="11"
                                  Grid.Column="2"
                                  Margin="0,3,0,3">
                            <ComboBoxItem Content="Pro Kata Club (P.K.C.)"
                                          IsSelected="True"/>
                        </ComboBox>






                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="btnBack"
                                Content="Back"
                                Grid.Column="1"
                                Margin="10"/>
                        <Button Name="btnSave"
                                Content="Save"
                                Grid.Column="2"
                                Margin="10"/>
                        <Button Name="btnSaveNew"
                                Content="Save as new"
                                Grid.Column="3"
                                Margin="10"/>
                        <Button Name="btnDelete"
                                Content="Delete"
                                Grid.Column="4"
                                Margin="10"/>




                    </Grid>

                </Grid>
               


            </TabItem>

            <TabItem Name="JudgeTap" Header="Judge management">
            

            </TabItem>
        
        
        </TabControl>
       
    </Grid>
</Window>

