<Window x:Class="KarateGeek.guis.KataSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KataSystemForm" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Label Name="lblInfo" 
                     Content="kata competitor and match info"
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Center"
                     FontSize="16" 
                     Margin="5"/>
        </Grid>

        <Grid Grid.Row="1" 
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Name="eventJudgePickerA" Grid.Column="1" 
                      VerticalAlignment="Center" 
                      Margin="10" >
                <ComboBoxItem Name="judjeA" 
                              HorizontalAlignment="Center"
                              Content="judge a"
                              IsSelected="True"/>
            </ComboBox>

            <ComboBox Name="eventJudgePickerB" Grid.Column="2"  
                      VerticalAlignment="Center" 
                      Margin="10">
                <ComboBoxItem Name="judjeB" 
                              HorizontalAlignment="Center"
                              Content="judge b"
                              IsSelected="True"/>
            </ComboBox>
            <ComboBox Name="eventJudgePickerC" 
                      Grid.Column="3"  
                      VerticalAlignment="Center" 
                      Margin="10">
                <ComboBoxItem Name="judjeC" 
                              HorizontalAlignment="Center"
                              Content="judge c"
                              IsSelected="True"/>
            </ComboBox>
            <ComboBox Name="eventJudgePickerD" 
                      Grid.Column="4"   
                      VerticalAlignment="Center" 
                      Margin="10">
                <ComboBoxItem Name="judjeD" 
                              HorizontalAlignment="Center"
                              Content="judge d"
                              IsSelected="True"/>
            </ComboBox>
            <ComboBox Name="eventJudgePickerE" 
                      Grid.Column="5"  
                      VerticalAlignment="Center" 
                      Margin="10">
                <ComboBoxItem Name="judjeE" 
                              HorizontalAlignment="Center"
                              Content="judge e"
                              IsSelected="True"/>
            </ComboBox>

            <TextBox Name="scoreA"
                Text="score a"
                     TextAlignment="Center"
                Grid.Row="2"
                Grid.Column="1"
                     VerticalAlignment="Center"
                    Margin="10,0,5,0" 
                     TextChanged="scoreA_TextChanged" />
            <TextBox Name="scoreB"
                Text="score b"
                     TextAlignment="Center"
                Grid.Row="2"
                Grid.Column="2"
                     VerticalAlignment="Center"
                    Margin="10,0,5,0" 
                     TextChanged="scoreB_TextChanged" />
            <TextBox Name="scoreC"
                Text="score c"
                     TextAlignment="Center"
                Grid.Row="2"
                Grid.Column="3"
                     VerticalAlignment="Center"
                    Margin="10,0,5,0" 
                     TextChanged="scoreC_TextChanged" />
            <TextBox Name="scoreD"
                Text="score d"
                     TextAlignment="Center"
                Grid.Row="2"
                Grid.Column="4"
                     VerticalAlignment="Center"
                    Margin="10,0,5,0" 
                     TextChanged="scoreD_TextChanged" />
            <TextBox Name="scoreE"
                Text="score e"
                     TextAlignment="Center"
                Grid.Row="2"
                Grid.Column="5"
                     VerticalAlignment="Center"
                    Margin="10,0,5,0"
                     TextChanged="scoreE_TextChanged" />
        </Grid>

        <Grid Grid.Row="2" Margin="30,15">

