<Window x:Class="KarateGeek.guis.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="karate geek log in" 
        Width="450" Height="300"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50"/>
            <RowDefinition MinHeight="50"/>
            <RowDefinition MinHeight="10"/>
            <RowDefinition MinHeight="50"/>
            <RowDefinition MinHeight="50"/>
            <RowDefinition MinHeight="50"/>
            
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="50"/>
            <ColumnDefinition MinWidth="150"/>
            <ColumnDefinition MinWidth="150"/>
            <ColumnDefinition MinWidth="100"/>
            
        </Grid.ColumnDefinitions>
        
        <Label Content="user name" 
               Grid.Column="1" 
               Grid.Row="1" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               FontSize="17"/>
        <TextBox Name="ueserName" 
                 Grid.Row="1" 
                 Grid.Column="2" 
                 MinWidth="150"
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center" 
                 FontSize="17"
                 BorderThickness="2"/>
        
        <Label Content="user name" 
               Grid.Column="1" 
               Grid.Row="3" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               FontSize="17"/>
        <TextBox Name="password" 
                 Grid.Row="3" 
                 Grid.Column="2" 
                 MinWidth="150"
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center" 
                 FontSize="17"
                 BorderThickness="2"/>
        
        <Button Name="exit"
                Content="Exit"
                Grid.Row="4"
                Grid.Column="1"
                Margin="15,10,15,10"/>
        <Button Name="login"
                Content="Log in"
                Grid.Row="4"
                Grid.Column="2"
                Margin="15,10,15,10"/>        
        
        
        
        
        
        
    </Grid>
</Window>
